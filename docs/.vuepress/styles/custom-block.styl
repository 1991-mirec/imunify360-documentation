.custom-block
  .custom-block-title
    font-weight 700
    margin-bottom -0.4rem

  &.tip, &.warning, &.danger, &.info
    font-size: 0.85rem
    padding 0.75rem 1rem
    border-radius 0.475rem
    margin 1rem 0

  &.tip
    background-color #D6EBFF

  &.warning
    background-color #ffeedb

    a
      color $textColor

  &.danger
    background-color #ffdede

    a
      color $textColor

  &.info
    background-color #DFFAD4

    a
      color $textColor

